<table>
  <tr>
    <th>ID</th>
    <th>Owner</th>
    <th>Duration</th>
  </tr>
  <% nodes.each do |node| %>
    <tr>
      <td style="padding: 15px;"><%= node.id %></td>
      <td style="padding: 15px;"><%= node.user.email %></td>
      <td align="center" style="padding: 15px;">
        <%= node.online_at.present? ? distance_of_time_in_words_to_now(node.online_at) : '/' %>
      </td>
    </tr>
  <% end %>
</table>
